
<h3>Listing locations</h3>

<%= link_to 'New Location', new_location_path %>
<table>
  <tr>
    <th>Name & Description</th>
    <th>Address</th>
    <th>Find us online</th>
    <th>Capacity</th>
    <th></th>
  </tr>
<%= gmaps4rails(@json) %>

<% @locations.each do |location| %>
  <tr>
    <td>
       <%= image_tag(location.image_url(:thumb).to_s, :class => "style1") %> <br/>
       <em><b><%= location.description.name %></b></em>

    <br/><%= location.description.description %></td>
    <td><%= location.description.address %></td>
    <td><%= link_to location.description.link, "http://"+location.description.link %><br/>
    <%= location.description.email %></td>
    <td><%= location.capacity %></td>
    <td><%= link_to image_tag("icons/eye.png"), location %>
    <%= link_to image_tag("icons/page_white_edit.png"), edit_location_path(location) %>
    <%= link_to image_tag("icons/delete.png"), location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

