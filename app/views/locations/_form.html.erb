<%= form_for(@location, :html => {:multipart => true}) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :description do |description| %>
    <%= render 'shared/descriptions', :f => description %>
  <% end %>

  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.number_field :capacity %>
  </div>
  <div class="field">

    <%= f.label :image %><br />
    <%= image_tag(@location.image_url) if @location.image? %>
    <%= f.label :remove_image %>
    <%= f.check_box :remove_image %>
    <%= f.label :upload_image %><br />
    <%= f.file_field :image %>
    <%= f.label :remote_image_url, "or image URL" %>
    <%= f.text_field :remote_image_url %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
