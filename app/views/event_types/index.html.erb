<h3>Listing event types</h3>

<table>

  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @event_types.each do |event_type| %>
  <tr>
    <td><%= event_type.name %></td>
    <td><%= link_to image_tag("icons/eye.png"), event_type %></td>
    <td><%= link_to image_tag("icons/page_white_edit.png"), edit_event_type_path(event_type) %></td>
    <td><%= link_to  image_tag("icons/delete.png"), event_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

