<h3>Listing categories</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.position %></td>
    <td><%= link_to image_tag("icons/eye.png"), category %></td>
    <td><%= link_to image_tag("icons/page_white_edit.png"), edit_category_path(category) %></td>
    <td><%= link_to  image_tag("icons/delete.png"), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

