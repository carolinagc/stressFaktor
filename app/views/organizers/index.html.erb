<h3>Listing organizers</h3>

<%= link_to 'New Organizer', new_organizer_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Web</th>
    <th>mail</th>
  </tr>

<% @organizers.each do |organizer| %>
  <tr>
    <td>
       <%= image_tag(organizer.image_url(:thumb).to_s, :class => "style1") %> <br/>
       <%= organizer.description.name %>
    </td>
    <td><%= organizer.description.description %></td>
    <td><%= link_to organizer.description.link,organizer.description.link %></td>
    <td><%= organizer.description.email %></td>

    <td><%= link_to image_tag("icons/eye.png"), organizer %></td>
    <td><%= link_to image_tag("icons/page_white_edit.png"), edit_organizer_path(organizer) %></td>
    <td><%= link_to image_tag("icons/delete.png"), organizer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>

<br />

